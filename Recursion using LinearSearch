//Recursion uing Linear Search
#include <bits/stdc++.h>
using namespace std;

int* linearSearch(int *arr, int n, int item) {
    if (n == 0) {
        return nullptr;
    }
    if (*arr == item) {
        return arr; 
    }
    return linearSearch(arr + 1, n - 1, item);
}

int main() {
    int n, item;
    cin >> n >> item;
    
    int *arr = new int[n]; 

    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }
    
    int *ans = linearSearch(arr, n, item);
    if (ans == nullptr) {
        cout << "Item not found";
    } else {
        cout << "Item found at index: " << ans - arr;
    }

    delete[] arr;
    return 0;
}
