Recursion using Array (Sum of an Array Elements)
#include <bits/stdc++.h>
using namespace std;

int add(int *arr,int n){
    int sum = 0,i=0;
    if(n==0){
        return 0;
    }
    else{
        sum+=*arr;
        // i++;
    }
    sum=sum+add(arr+1,n-1);
    return sum;
}
int main() {
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++){
        cin>>arr[i];
    }
    int ans = add(arr,n);
    cout<<ans;
    return 0;
}
